@model WebBanHang.Models.SAN_PHAM

@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutCreate.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container my-5">
        <div class="card shadow border-0" style="border-radius: 15px;">
            <div class="card-header text-center text-white" style="background-color: rgb(0, 28, 64); border-radius: 15px 15px 0 0;">
                <h3 class="mb-0">Delete Product</h3>
            </div>
            <div class="card-body p-5" style="background-color: #f9f9f9; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px;">
                <div class="alert alert-warning" role="alert">
                    Are you sure you want to delete this product? This action cannot be undone.
                </div>
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger rounded-3 shadow-sm mb-4" })

                <div class="row gy-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Mã sản phẩm</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.MA_SP" readonly />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Tên sản phẩm</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.TEN_SP" readonly />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Mô tả</label>
                            <textarea class="form-control rounded-3 shadow-sm border-0" rows="4" readonly>@Model.MO_TA</textarea>
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Giá</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.GIA" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Loại sản phẩm</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.LOAI_SAN_PHAM.TEN_LOAI" readonly />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Hình ảnh</label>
                            <img src="@Url.Content(Model.HINH_ANH)" class="img-thumbnail shadow-sm border-0" style="width: 200px; height: 200px; object-fit: cover; border-radius: 10px;" />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Tình trạng</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value=" @(Model.TRANG_THAI.HasValue
                                 ? (Model.TRANG_THAI.Value ? "Còn hàng" : "Hết hàng")
                                 : "Không xác định")" readonly />
                        </div>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg rounded-pill px-4 py-2 shadow-sm" style="font-weight: bold;" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-primary btn-lg rounded-pill px-4 py-2 shadow-sm ms-3", style = "color: rgb(0, 28, 64); border-color: rgb(0, 28, 64); font-weight: bold;" })
                </div>

            </div>
        </div>
    </div>
}
