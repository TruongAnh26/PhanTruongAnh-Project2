@model WebBanHang.Models.KHACH_HANG

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutCreate.cshtml";
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container my-5">
        <div class="card shadow border-0" style="border-radius: 15px;">
            <div class="card-header text-center text-white" style="background-color: rgb(0, 28, 64); border-radius: 15px 15px 0 0;">
                <h3 class="mb-0">Add New Customer</h3>
            </div>
            <div class="card-body p-5" style="background-color: #f9f9f9; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px;">

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger rounded-3 shadow-sm mb-4" })

                <div class="row gy-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MA_KH, "Mã khách hàng", htmlAttributes: new { @class = "form-label fw-bold", style = "color: rgb(0, 28, 64);" })
                            @Html.EditorFor(model => model.MA_KH, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm border-0" } })
                            @Html.ValidationMessageFor(model => model.MA_KH, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.HO_TEN, "Họ tên", htmlAttributes: new { @class = "form-label fw-bold", style = "color: rgb(0, 28, 64);" })
                            @Html.EditorFor(model => model.HO_TEN, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm border-0" } })
                            @Html.ValidationMessageFor(model => model.HO_TEN, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TAI_KHOAN, "Tài khoản", htmlAttributes: new { @class = "form-label fw-bold", style = "color: rgb(0, 28, 64);" })
                            @Html.EditorFor(model => model.TAI_KHOAN, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm border-0" } })
                            @Html.ValidationMessageFor(model => model.TAI_KHOAN, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MAT_KHAU, "Mật khẩu", htmlAttributes: new { @class = "form-label fw-bold", style = "color: rgb(0, 28, 64);" })
                            @Html.EditorFor(model => model.MAT_KHAU, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm border-0" } })
                            @Html.ValidationMessageFor(model => model.MAT_KHAU, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DIEN_THOAI, "Điện thoại", htmlAttributes: new { @class = "form-label fw-bold", style = "color: rgb(0, 28, 64);" })
                            @Html.EditorFor(model => model.DIEN_THOAI, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm border-0" } })
                            @Html.ValidationMessageFor(model => model.DIEN_THOAI, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.EMAIL, "Email", htmlAttributes: new { @class = "form-label fw-bold", style = "color: rgb(0, 28, 64);" })
                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm border-0" } })
                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GIOI_TINH, "Giới tính", htmlAttributes: new { @class = "form-label fw-bold", style = "color: rgb(0, 28, 64);" })
                            <select id="GIOI_TINH" name="GIOI_TINH" class="form-select rounded-3 shadow-sm border-0">
                                <option value="true">Nam</option>
                                <option value="false">Nữ</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.GIOI_TINH, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TRANG_THAI, "Trạng thái", htmlAttributes: new { @class = "form-label fw-bold", style = "color: rgb(0, 28, 64);" })
                            <select id="TRANG_THAI" name="TRANG_THAI" class="form-select rounded-3 shadow-sm border-0">
                                <option value="true">Hoạt động</option>
                                <option value="false">Không hoạt động</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.TRANG_THAI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <input type="submit" value="Create Customer" class="btn btn-primary btn-lg rounded-pill px-4 py-2 shadow-sm" style="background-color: rgb(0, 28, 64); border: none; font-weight: bold;" />
                    @Html.ActionLink("Back to Customer List", "Index", null, new { @class = "btn btn-outline-primary btn-lg rounded-pill px-4 py-2 shadow-sm ms-3", style = "color: rgb(0, 28, 64); border-color: rgb(0, 28, 64); font-weight: bold;" })
                </div>

            </div>
        </div>
    </div>
}

