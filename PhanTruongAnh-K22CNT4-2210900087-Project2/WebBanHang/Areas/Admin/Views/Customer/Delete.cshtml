@model WebBanHang.Models.KHACH_HANG

@{
    ViewBag.Title = "Delete Customer";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutCreate.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container my-5">
        <div class="card shadow border-0" style="border-radius: 15px;">
            <div class="card-header text-center text-white" style="background-color: rgb(0, 28, 64); border-radius: 15px 15px 0 0;">
                <h3 class="mb-0">Delete Customer</h3>
            </div>
            <div class="card-body p-5" style="background-color: #f9f9f9; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px;">
                <div class="alert alert-warning" role="alert">
                    Are you sure you want to delete this Customer? This action cannot be undone.
                </div>
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger rounded-3 shadow-sm mb-4" })

                <div class="row gy-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Họ tên</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.HO_TEN" readonly />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Tài khoản</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.TAI_KHOAN" readonly />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Mật khẩu</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.MAT_KHAU" readonly />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Điện thoại</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.DIEN_THOAI" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Email</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@Model.EMAIL" readonly />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Giới tính</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@(Model.GIOI_TINH.HasValue ? (Model.GIOI_TINH.Value ? "Nam" : "Nữ") : "Unknown")" readonly />
                        </div>

                        <div class="form-group">
                            <label class="form-label fw-bold" style="color: rgb(0, 28, 64);">Tình trạng</label>
                            <input class="form-control rounded-3 shadow-sm border-0" type="text" value="@(Model.TRANG_THAI.HasValue ? (Model.TRANG_THAI.Value ? "Active" : "Inactive") : "Unknown")" readonly />
                        </div>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg rounded-pill px-4 py-2 shadow-sm" style="font-weight: bold;" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-primary btn-lg rounded-pill px-4 py-2 shadow-sm ms-3", style = "color: rgb(0, 28, 64); border-color: rgb(0, 28, 64); font-weight: bold;" })
                </div>

            </div>
        </div>
    </div>
}
